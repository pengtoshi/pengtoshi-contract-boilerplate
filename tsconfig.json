{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@typechains": ["./typechain-types"],
      "~/test/*": ["./test/hardhat/*"]
    }
  },
  "include": ["./hardhat.config.ts", "src", "tools", "./typechain-types"]
}
