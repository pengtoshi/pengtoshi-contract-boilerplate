{
  "name": "pengtoshi-contract-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "dotenv -e ./tools/env/.env.local -- hardhat compile && forge build",
    "check-branch-name": "chmod 755 tools/scripts/check_branch_naming.sh && sh tools/scripts/check_branch_naming.sh",
    "deploy:base_sepolia": "dotenv -e ./tools/env/.env.base_sepolia -- npx hardhat deploy --network base_sepolia --export ./deployments/base_sepolia.json",
    "prepare": "npm-run-all prepare:*",
    "prepare:husky": "husky install",
    "test": "export $(cat tools/env/.hardhat.env | xargs) && HARDHAT_DEPLOY_FIXTURE=true hardhat test"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@commitlint/config-nx-scopes": "^18.3.0",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomiclabs/hardhat-etherscan": "2.1.3",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.12",
    "@openzeppelin/contracts": "5.0.2",
    "@openzeppelin/contracts-upgradeable": "5.0.2",
    "@openzeppelin/hardhat-upgrades": "1.22.1",
    "@typechain/ethers-v5": "7.0.1",
    "@typechain/hardhat": "3",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "commitlint-config-git-commit-emoji": "^1.0.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "ethers": "^5.7.2",
    "hardhat": "2.12.2",
    "hardhat-deploy": "0.11.22",
    "hardhat-gas-reporter": "^1.0.8",
    "solady": "^0.0.281",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "5.1.2",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "eslint": "8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1"
  }
}
